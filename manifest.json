{
  "manifest_version": 2,
  "name": "Tinkercad WakaTime Integration",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.tinkercad.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.tinkercad.com/*"],
      "js": ["content.js"]
    }
  ]
}